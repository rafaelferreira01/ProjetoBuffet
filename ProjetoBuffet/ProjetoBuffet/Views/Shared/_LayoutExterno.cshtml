                    @* </li> *@
                    
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - Buffet do Zezinho - <a asp-area="" asp-controller="Home" asp-action="PoliticaDePrivacidade">Política de Privacidade</a>
